<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_large">
        <item name="android:textSize">@dimen/font_largest</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/indent_small</item>
    </style>

    <style name="title_normal">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/indent_small</item>
    </style>

    <style name="description_normal">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

</resources>